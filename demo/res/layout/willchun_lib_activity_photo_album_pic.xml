<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">
    <GridView 
        android:id="@+id/willchun_lib_activity_photo_album_pic_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:numColumns="3"/>
	
     <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
        
    <LinearLayout 
        android:id="@+id/willchun_lib_activity_photo_album_pic_pre_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#88050505">
       
	    <HorizontalScrollView 
            android:id="@+id/willchun_lib_activity_photo_album_pic_pre_hs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:scrollbars="none">
	        <LinearLayout
                android:id="@+id/selected_image_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"/>
	        
	    </HorizontalScrollView>
        <Button 
            android:id="@+id/willchun_lib_activity_photo_album_pic_pre_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:text="发送"
            android:background="@drawable/willchun_shape_lib_btn_gray"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
</FrameLayout>
