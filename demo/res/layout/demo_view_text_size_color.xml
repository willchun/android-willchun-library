<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Text Size Micro"
            android:textSize="@dimen/willchun_lib_text_micro" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Text Size Small"
            android:textSize="@dimen/willchun_lib_text_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Text Size Medium"
            android:textSize="@dimen/willchun_lib_text_medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Text Size Large"
            android:textSize="@dimen/willchun_lib_text_large" />

        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/willchun_lib_text_micro"
            android:layout_marginTop="8dp"
            android:text="Light Color Area"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_light_blue" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_light_purple" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_light_green" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_light_yellow" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_light_red" />
        </LinearLayout>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/willchun_lib_text_micro"
            android:layout_marginTop="8dp"
            android:text="Dark Color Area"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_dark_blue" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_dark_purple" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_dark_green" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_dark_yellow" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/willchun_lib_theme_color_dark_red" />
        </LinearLayout>

        <ImageView
                android:id="@+id/load_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#ff0000"/>


        <ImageView
                android:id="@+id/load_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00ff00"/>

        <ImageView
                android:id="@+id/load_image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#0000ff"/>

    </LinearLayout>

</ScrollView>